<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">User Name : <%= @user.username %>
    	<%= link_to 'Back', analytics_path, class: "pull-right btn btn-default" %>
    </h3>
    <div class="clearfix"></div>
  </div>
  <div class="panel-body">
    <table class="table table-bordered table-striped">
	  <thead>
	    <tr>
	      <th>Arrival Date</th>
	      <th>Arrival Time</th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @user.timesheets.each do |timesheet| %>
	      <tr>
	        <td><%= timesheet.entry_time.strftime('%d-%m-%Y') %></td>
	        <td><%= timesheet.entry_time.strftime('%H:%M') %></td>
	      </tr>
	    <% end %>
	  </tbody>
	  <tfoot>
	    <tr>
	      <td><strong>Average</strong></td>
	      <td><strong><%= @average_time %></strong></td>
	    </tr>
	  </tfoot>
	</table>
  </div>
</div>